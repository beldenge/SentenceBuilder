<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans 
       		http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
       		http://www.springframework.org/schema/context
       		http://www.springframework.org/schema/context/spring-context-3.0.xsd">
 
 	<context:annotation-config/>
 	<context:component-scan base-package="com.ciphertool.sentencebuilder.dao"/>
 
    <bean class="com.ciphertool.sentencebuilder.dao.WordListDAO" id="wordListDAO">
        <property name="connectionString" value="jdbc:postgresql://localhost:5432/Zodiac"/>
        <property name="username" value="postgres"/>
        <property name="password" value="postgres"/>
    </bean>
    
    <bean class="com.ciphertool.sentencebuilder.util.SentenceHelper" id="sentenceHelper">
    	<property name="grammarFile" value="data\\xml\\EnglishSentenceCFG.xml"/>
    </bean>
 
    <bean class="com.ciphertool.sentencebuilder.util.WordListImporter" id="wordListImporter">
    	<property name="fileName" value="data\\pos\\part-of-speech.txt"/>
    </bean>
    
</beans>